FROM node:20-alpine

WORKDIR /app

# Copiar package files
COPY frontend/package*.json ./

# Instalar dependências
RUN npm ci

# Copiar o resto do código
COPY frontend/ .

# Build da aplicação Next.js
RUN npm run build

# Expor a porta
EXPOSE 3000

# Comando para correr a aplicação
CMD ["npm", "start"]
